<h3>施設詳細&ルーム予約ページ</h3>


<table>

 <tr>
  <td><%= image_tag @room.image ,size: "300x250" %></td>
 </tr>

 <tr>
  <td><%= @room.room_name %></td>
 </td>
 
 <tr>
  <td><%= @room.address %></td>
 </tr>

 <tr>
  <td><%= @room.introduction %></td>
 </tr>

  <tr>
  <td>￥<%= @room.price %>〜</td>
 </tr>

</table>

 <%= form_with model: @reservation, url: new_reservation_path, method: :get do |f| %>

<%= f.hidden_field:room_id, value:@room.id %>
<%= f.hidden_field:user_id, value:current_user.id %>

<label>開始日</label>
<%= f.text_field  :start_date%>

<label>終了日</label>
<%= f.text_field :end_date%>

<label>人数</label>
<%= f.text_field :people%>

<%= f.submit "この日程で予約する"%>

<% end %>

